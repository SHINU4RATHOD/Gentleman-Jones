{
  "entities": {
    "User": {
      "title": "User",
      "description": "A user of the application.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "The URL of the user's profile picture."
        },
        "roles": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "admin"
            ]
          }
        }
      },
      "required": [
        "uid",
        "email"
      ]
    },
    "Purchase": {
      "title": "Purchase",
      "description": "A record of a user's purchase.",
      "type": "object",
      "properties": {
        "purchaseId": {
          "type": "string"
        },
        "userId": {
          "type": "string"
        },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "productId": {
                "type": "string"
              },
              "quantity": {
                "type": "number"
              },
              "price": {
                "type": "number"
              }
            },
            "required": [
              "productId",
              "quantity",
              "price"
            ]
          }
        },
        "total": {
          "type": "number"
        },
        "purchaseDate": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "purchaseId",
        "userId",
        "items",
        "total",
        "purchaseDate"
      ]
    }
  },
  "auth": {
    "providers": [
      "anonymous"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/User"
      },
      "description": "Stores user profile information."
    },
    "/users/{userId}/purchases/{purchaseId}": {
      "schema": {
        "$ref": "#/entities/Purchase"
      },
      "description": "Stores the purchase history for a user."
    }
  }
}
